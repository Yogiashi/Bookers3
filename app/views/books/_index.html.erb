<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td><%= link_to book.category, tag_path(keyword: book.category) %></td>
        <td id="comment-count"><%= render 'book_comments/count', book: book %></td>
        <td><%= render "books/rate", book: book %></td>
        <td id="favorite-btn_<%= book.id %>"><%= render "favorites/btn", book: book %></td>
        <td>閲覧数：<%= book.view_counts.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>